generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Professor {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  empresa Empresa[]

  @@map("professores")
}

model Empresa {
  id    Int     @id @default(autoincrement())
  name  String
  programa String
  orientadorTecnico String 
  monitor String
  professor Professor? @relation(fields: [professorId], references: [id] )
  professorId Int?

  @@map("empresas")
}